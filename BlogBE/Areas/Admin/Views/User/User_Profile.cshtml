@{
    ViewData["Title"] = "User Profile Panel";
}

@model Blog.Models.User

<div class="container shadow py-3 my-3">
    <div class="container">
        <h3 class="fst-italic px-3 pt-3 mx-2 border-bottom"> Account Information</h3>
    </div>
    <div class="row pb-5 pt-2">
        <div class="col-md-10 offset-lg-1">
            <table class="table fst-italic py-0 my-0">
                <tbody>
                    <tr>
                        <th scope="row">Username</th>
                        <td>username</td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>email</td>
                    </tr>
                    <tr>
                        <th scope="row">Profile Description</th>
                        <td>@Model.profile_description</td>
                    </tr>
                    <tr>
                        <th scope="row">Role</th>
                      @*   <td>@(Model.is_Admin ? "Admin" : "Regular User")</td> *@
                    </tr>
                    <tr>
                        <th scope="row">Created at</th>
                        <td>@Model.created_at</td>
                    </tr>
                    <tr>
                        <th scope="row">Last online</th>
                        <td>@Model.last_online</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
