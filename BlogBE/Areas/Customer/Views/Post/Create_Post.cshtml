@{
    ViewData["Title"] = "Create Post";
}
@model Post

<form method="post" asp-controller="Post" asp-action="Create_Post">

<div class="container py-4 my-4">

    <div class="container p-3 new-dark-blue">

        <div class="container">
            <h1 class="text-light fst-italic">Create New Post</h1>
        </div>

        <div class="container">
            
                <div class="form-group mb-3">
                    <label asp-for="content_title" class="text-white">Title:</label>
                    <input asp-for="content_title" class="form-control" aria-required="true" placeholder="Title" />
                    <span asp-validation-for="content_title" class="text-danger"></span>
                </div>

                <div class="form-group pb-3">
                    <label asp-for="content" class="text-light">Content:</label>
                    <input asp-for="content" class="form-control" >
                        @* <textarea asp-for="content" class="form-control" rows="8" required></textarea>  *@
                     
                
                </input>
@*                     <textarea class="form-control" id="editor" ></textarea> *@
                </div>

                <div class="text-end me-3">
                <button type="submit" class="btn btn-light py-2 my-1 px-3 mx-2 ">Save</button>

                </div>

        </div>

    </div>
</div>

</form>

