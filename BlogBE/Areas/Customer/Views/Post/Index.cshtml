@{
    ViewData["Title"] = "Posts";
}

@* BIG CONTAINER *@
<div class="container new-dark-blue pb-2">

    @* POST*@
    <div class="container col border-3 py-3 my-5>
        <div class="row pt-5">
        @if (User.IsInRole(SD.Role_Admin))
        {

            <div class="py-3 my-3">
                    <a class=" btn text-dark" asp-area="Customer" asp-controller="Post" asp-action="Create_Post">Create Post</a>

            </div>
      
        }

        @foreach (var obj in Model)
        {
                <p class="card-text text-danger">
                    
                </p>
       
                <div class="card mb-3 post-card-stats">
                    <div class="card-body">
                        <a asp-controller="Post" asp-action="Post_Id" asp-route-Unique_Id_Post="@obj.Unique_Id_Post">
                        <h5 class="card-title">@obj.content_title</h5>
                        </a>

                        <p class="card-text post-card-content">@obj.content</p>
                        <div>
                            <p class="card-text d-inline"><small class="text-muted">@obj.created_at |</small></p>
                            <p class="card-text d-inline px-1"><small class="text-muted">@obj.last_modified |</small></p>
                            <p class="card-text d-inline px-1">
                                <a asp-Area="admin" asp-controller="User" asp-action="User_Profile" asp-route-username="@obj.author_user_id">
                                    <small class="text-muted">by @obj.DisplayName|</small>
                                </a>
                            </p>
                            <p class="card-text d-inline">
                                <small class="text-muted align-content-end">Rating + @obj.Unique_Id_Post</small>
                            </p>
                        </div>
                    </div>
                </div>
        }

        </div>


    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center mt-4 p-2">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item text-dark"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>




    </nav>


        
    </div>





